/*me.wxss*/
page {
  width: 100%;
  height: 100%; }

.container {
  flex-direction: column;
  font-size: 14px;
  height: 100%;
  background: #eee;
  color: #333333; }

.publicContainer {
  display: flex;
  box-sizing: border-box; }

/*---------------me-----------------------*/
.me-top {
  height: 80px;
  padding: 8px 16px;
  background-image: url("/images/img_my_an.png");
  font-size: 14px;
  color: #FFF;
  background-color: #FFF;
  margin-bottom: 10px; }
  .me-top .me-top-left {
    display: flex;
    box-sizing: border-box;
    flex: 1;
    height: 100%; }
    .me-top .me-top-left .tianhongIcon {
      flex: 1;
      height: 100%;
      padding-right: 16px;
      border-radius: 50%; }
      .me-top .me-top-left .tianhongIcon image {
        width: 100%;
        height: 100%; }
    .me-top .me-top-left view:last-child {
      display: flex;
      box-sizing: border-box;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      flex: 2;
      padding: 4px 0; }
      .me-top .me-top-left view:last-child p {
        line-height: 28px; }

.me-more {
  display: flex;
  box-sizing: border-box;
  flex: 1;
  justify-content: flex-end;
  align-items: center; }
  .me-more image {
    width: 12px;
    height: 16px; }
  .me-more text {
    color: #aeaeae;
    font-size: 12px; }

/*---------------orders-----------------------*/
.me-modle {
  justify-content: space-between;
  align-items: center;
  height: 40px;
  line-height: 40px;
  padding: 0 16px;
  background-color: #FFF;
  margin-bottom: 10px; }
  .me-modle .me-modle-til {
    display: flex;
    box-sizing: border-box;
    flex: 1;
    height: 100%; }
    .me-modle .me-modle-til image {
      width: 20px;
      height: 100%;
      margin-right: 6px; }
    .me-modle .me-modle-til text {
      flex: 1; }

/*---------------state-----------------------*/
.state {
  width: 100%;
  height: 70px;
  background-color: #FFF;
  margin-bottom: 10px; }
  .state nav {
    height: 100%; }
    .state nav li {
      display: flex;
      box-sizing: border-box;
      flex: 1;
      justify-content: space-around;
      align-items: center;
      flex-direction: column;
      height: 100%; }
      .state nav li image {
        width: 30px;
        height: 30px; }
      .state nav li text {
        font-size: 12px; }

/*---------------three-me-modle-----------------------*/
.three-me-modle, .two-me-modle {
  margin-bottom: 10px; }
  .three-me-modle .me-modle, .two-me-modle .me-modle {
    margin-bottom: 0; }
