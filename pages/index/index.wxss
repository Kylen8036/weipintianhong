/*me.wxss*/
page {
  width: 100%;
  height: 100%; }

.container {
  flex-direction: column;
  font-size: 14px;
  height: 100%;
  color: #333;
  background: #eee; }

.publicContainer {
  display: flex;
  box-sizing: border-box; }

/*---------------scroll-view-----------------------*/
.index-module {
  background: #FFF;
  margin-bottom: 10px; }

.banner-module {
  width: 100%; }
  .banner-module .banner {
    width: 100%;
    height: 150px; }
    .banner-module .banner navigator {
      width: 100%;
      height: 100%; }
      .banner-module .banner navigator image {
        width: 100%;
        height: 150px; }
  .banner-module view {
    width: 100%;
    height: 40px;
    line-height: 40px;
    padding: 0 10px; }
    .banner-module view image {
      flex: 1;
      height: 100%;
      padding-right: 6px; }
    .banner-module view text {
      flex: 3; }

/*---------------typeNav-----------------------*/
.typeNav nav {
  height: 110px;
  justify-content: space-around; }
  .typeNav nav li {
    flex: 1;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    height: 100%; }
    .typeNav nav li image {
      width: 50px;
      height: 50px; }
    .typeNav nav li text {
      font-size: 12px; }

/*---------------partener-----------------------*/
.partener nav {
  height: 140px; }
  .partener nav li {
    flex: 1;
    padding: 10px;
    height: 100%; }
    .partener nav li image {
      width: 100%;
      height: 100%; }

/*---------------proShows-two-----------------------*/
.proShows-two nav {
  height: 180px; }
  .proShows-two nav li {
    flex: 1;
    padding: 10px;
    height: 100%; }
    .proShows-two nav li image {
      width: 100%;
      height: 100%; }
