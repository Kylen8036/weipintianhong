/*me.wxss*/
page {
  width: 100%;
  height: 100%; }

.container {
  flex-direction: column;
  font-size: 14px;
  height: 100%;
  color: #333;
  background: #eee; }

.publicContainer {
  display: flex;
  box-sizing: border-box; }

/*---------------scroll-view-----------------------*/
.index-module {
  background: #FFF;
  margin-bottom: 10px; }

/*---------------myShop-top-----------------------*/
.myShop-top {
  height: 160px;
  flex-direction: column;
  align-items: center;
  font-size: 14px;
  color: #FFF;
  background-image: url("http://assets.honglingjin.cn/assets/img/2016/5/9/Fo6SFGTLDmBGS90mThYyudlB.jpg");
  background-size: 100% 100%; }
  .myShop-top text {
    text-align: center;
    width: 100%; }
  .myShop-top .topImg {
    width: 100%;
    justify-content: space-around;
    padding: 24px 0 24px; }
    .myShop-top .topImg view {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      overflow: hidden; }
      .myShop-top .topImg view image {
        width: 60px;
        height: 60px; }
  .myShop-top text:last-child {
    padding: 20px 0;
    font-size: 12px; }

/*---------------typeNav-----------------------*/
.typeNav nav {
  height: 110px;
  justify-content: space-around; }
  .typeNav nav li {
    flex: 1;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    height: 100%; }
    .typeNav nav li image {
      width: 68px;
      height: 68px; }
    .typeNav nav li text {
      font-size: 12px; }

/*---------------tab_head_choice-----------------------*/
.tab_head_choice nav {
  justify-content: space-around;
  align-items: center;
  height: 36px;
  padding: 0 10px;
  align-items: center;
  flex: 1; }
  .tab_head_choice nav li {
    flex: 1;
    height: 36px;
    text-align: center; }
    .tab_head_choice nav li a {
      line-height: 35px; }
  .tab_head_choice nav .active_choice {
    border-bottom: 1px solid #ff3c64; }
    .tab_head_choice nav .active_choice a {
      color: #ff3c64; }

/*---------------proData-----------------------*/
.proData {
  flex-direction: column;
  background: transparent; }
  .proData .proItem {
    width: 100%;
    height: 150px;
    padding: 10px;
    margin-bottom: 10px;
    background: #FFF; }
    .proData .proItem:last-child {
      margin-bottom: 0; }
    .proData .proItem .proImg {
      flex: 3;
      height: 100%;
      padding-right: 10px; }
      .proData .proItem .proImg image {
        width: 100%;
        height: 100%; }
    .proData .proItem .productInfo {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
      flex: 5;
      height: 100%; }
      .proData .proItem .productInfo .proTil {
        font-size: 15px; }
      .proData .proItem .productInfo .priceInfo {
        width: 100%;
        justify-content: space-between; }
        .proData .proItem .productInfo .priceInfo view:last-child {
          flex-direction: column; }
          .proData .proItem .productInfo .priceInfo view:last-child text {
            color: #303030;
            font-size: 16px;
            padding-bottom: 6px; }
          .proData .proItem .productInfo .priceInfo view:last-child del {
            text-decoration: line-through;
            color: #919191;
            font-size: 12px; }
        .proData .proItem .productInfo .priceInfo view:first-child {
          flex-direction: row;
          align-items: center;
          font-size: 30px;
          color: #ff3c64; }
          .proData .proItem .productInfo .priceInfo view:first-child image {
            width: 40px;
            height: 40px;
            padding-right: 8px; }
      .proData .proItem .productInfo .join {
        justify-content: space-around;
        width: 100%;
        padding: 2px 0;
        font-size: 12px;
        color: #ff6a88;
        border: 1px solid #ff6a88;
        border-radius: 10px; }
